<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.www.repository.BoardDAO">
	<insert id="insert">
		insert into board(title, writer, content)
		value(#{title},#{writer},#{content})
	</insert>
	<select id="getList" resultType="com.myweb.www.domain.BoardVO">
		select * from board
		<include refid="search" />
		order by bno desc limit #{pageStart}, #{qty}
	</select>
	<select id="getBvo" resultType="com.myweb.www.domain.BoardVO">
		select * from board where bno =
		#{bno}
	</select>
	<select id="getTotalCount" resultType="int">
		select count(bno) from
		board
		<include refid="search" />
	</select>
	<select id="selectOneBno" resultType="long">
	select max(bno) from board;
	</select>
	<delete id="remove">
		delete from board where bno = ${bno}
	</delete>
	<update id="modify">
		update board set
		title=#{title},
		writer=#{writer},
		content=#{content},
		mod_at=now(),
		read_count = read_count-2
		where bno =
		#{bno}
	</update>
	<update id="read">
		update board set
		read_count = read_count+1
		where bno =
		#{bno}
	</update>
	<sql id="search">
		<if test="type != null">
			<trim prefix="where(" suffix=")" prefixOverrides="or">
				<foreach collection="typeToArray" item="type">
					<trim prefix="or">
						<choose>
							<when test="type == 't'.toString()">
								title like concat('%',#{keyword},'%')</when>
							<when test="type == 'w'.toString()">
								writer like concat('%',#{keyword},'%')</when>
							<when test="type == 'c'.toString()">
								content like concat('%',#{keyword},'%')</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>
</mapper>
